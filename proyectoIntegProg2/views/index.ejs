<%- include('./partials/head') %>
	<!-- Header -->
<%- include('./partials/header') %>
	<!-- /Header -->
	<!-- Banner -->
<main>
	<div class="banner">
		<img src="/images/pngwing.com.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Toda nuestra coleccion</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i<remeras.length; i++){%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/remeras/product/<%- remeras[i].id%>">
						<figure class="product-box_image">
							<img src=<%= remeras[i].img_url%> alt=<%= remeras[i].nombre%>>
						</figure>
						<article class="product-box_data">
							<h2><%= remeras[i].nombre_producto%></h2>
						</a>
							<p><%= remeras[i].descripcion%></p>
							<p>Publicado por <a href="/users/profile/<%=remeras[i].productos_usuarios.id %>"><%=remeras[i].productos_usuarios.username %></a></p>
						</article>
			</section>
			</div>
			<%}%>


		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
		</div>
	</div>
</main>
	<!-- /Más comentados -->


<%- include('./partials/footer.ejs') %>
