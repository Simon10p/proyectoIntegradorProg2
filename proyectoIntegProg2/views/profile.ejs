<%- include('./partials/head') %>
	<!-- Header -->
<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<main>
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= <%= user.pf %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= user.usuario %>
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>
							<%= user.email %>
						</li>
						<br>
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% for(let i=0; i<remeras.length; i++){%>
					<a href="/remeras/product">
						<figure class="product-box_image">
							<img src="<%= remeras[i].imgUrl%>" alt=<%= remeras[i].nombre%>>
						</figure>
						<article class="product-box_data">
							<h2><%= remeras[i].nombre%></h2>
							<p><%= remeras[i].descripcion%></p>
							<p>Comentarios: <%= remeras[i].comentarios%></p>
						</article>
					</a>
					<%}%>
				</section>
			</div>
		</div>
	</div>
	<!-- /Mis productos -->

</main>
<%- include('./partials/footer') %>
